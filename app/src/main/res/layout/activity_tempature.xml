<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tempature"
    android:id="@+id/activity_tempature">

    <com.jjoe64.graphview.GraphView
        android:id="@+id/graph"
        android:layout_width="358dp"
        android:layout_height="204dp"
        android:layout_marginBottom="331dp"
        android:background="#F7D5F1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/upload_but"
        android:layout_width="129dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="168dp"
        android:text="Upload"
        app:layout_constraintEnd_toEndOf="@+id/graph"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="@+id/graph"
        app:layout_constraintTop_toBottomOf="@+id/graph" />

    <Button
        android:id="@+id/update_but"
        android:layout_width="120dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="60dp"
        android:text="Update"
        app:layout_constraintEnd_toEndOf="@+id/graph"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/graph"
        app:layout_constraintTop_toBottomOf="@+id/graph" />


</androidx.constraintlayout.widget.ConstraintLayout>