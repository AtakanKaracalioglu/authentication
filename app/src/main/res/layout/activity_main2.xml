<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="496dp"
        android:layout_height="1480dp"
        android:layout_marginStart="40dp"

        android:layout_marginTop="118dp"
        android:layout_marginEnd="43dp"
        android:src="@drawable/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.285"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.568" />
    <Button

        android:text="Send Text"
        android:id="@+id/mainButton"
        android:layout_width="120dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="156dp"
        android:layout_marginTop="280dp"
        android:layout_marginEnd="132dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <Button
        android:id="@+id/gps_but"
        android:src="@drawable/background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="156dp"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="132dp"
        android:text="GPS Locatıon"
        app:layout_constraintBottom_toTopOf="@+id/audio_but"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/audio_but"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="156dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="133dp"
        android:text="Record Audıo"
        app:layout_constraintBottom_toTopOf="@+id/video_but"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gps_but" />

    <Button
        android:id="@+id/database_but"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="156dp"
        android:layout_marginTop="330dp"
        android:layout_marginEnd="132dp"
        android:text="database"
        app:layout_constraintBottom_toTopOf="@+id/gps_but"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
     />

    <Button
        android:id="@+id/video_but"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="156dp"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="30dp"
        android:text="Record Video"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/audio_but" />
</androidx.constraintlayout.widget.ConstraintLayout>